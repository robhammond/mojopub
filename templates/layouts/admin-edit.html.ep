                    fontSizeDec: true,
                    hr: true,
                    listOrdered: true,
                    listUnordered: true,
                    undo: true,
                    redo: true,
                    statistics: false,
                    viewSource: true,
                    quoteBlock: true,
                    link: true,
                    unlink: true,
